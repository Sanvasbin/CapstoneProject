<Window x:Name="frmMain" x:Class="CapstoneProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapstoneProject"
        mc:Ignorable="d"
        Title="Project Management App" Height="450" Width="800" AutomationProperties.Name="winMain">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnNewProject" Content="New Project" HorizontalAlignment="Left" Margin="10.4,0,0,0" VerticalAlignment="Top" Width="196" Height="92" Grid.Row="1" Grid.Column="1" Click="BtnNewProject_Click" />
        <Button x:Name="btnOpenProject" Content="Open Project" HorizontalAlignment="Left" Margin="10.4,180,0,0" VerticalAlignment="Top" Width="196" Height="92" Grid.Row="1" Grid.Column="1" Click="BtnOpenProject_Click"/>

    </Grid>
</Window>
